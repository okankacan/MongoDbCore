
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MongoDbExample.Business.Models.Users
<h1>Edit</h1>
<div class="row">
    <div class="col-md-3">
        <form asp-controller="Home" asp-action="Edit" data-id="@Model.Id" method="post">
         
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Name" />

            </div>
            <div class="form-group">
                <input asp-for="Surname" class="form-control" placeholder="SurName" />

            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" type="email" placeholder="email" />

            </div>
            <div class="form-group">
                <button type="submit" class="">Gönder</button>
            </div>
        </form>
    </div>
</div>
